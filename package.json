{
  "name": "rn-dev-manager",
  "version": "0.1.0",
  "description": "A k9s-style TUI dashboard for React Native development. Tames monorepo terminal hell.",
  "keywords": [
    "react-native",
    "cli",
    "tui",
    "metro",
    "monorepo",
    "android",
    "ios"
  ],
  "author": "",
  "type": "module",
  "license": "MIT",
  "homepage": "https://github.com/carlosherrera/rn-dev-manager",
  "repository": {
    "type": "git",
    "url": "https://github.com/carlosherrera/rn-dev-manager.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "bin": {
    "manager-rn": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "node dist/cli.js",
    "dev": "node --loader ts-node/esm src/cli.ts",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "execa": "^8.0.1",
    "find-up": "^7.0.0",
    "ink": "^4.4.1",
    "ink-spinner": "^5.0.0",
    "kill-port": "^2.0.1",
    "react": "^18.2.0",
    "tree-kill": "^1.2.2"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
